{
	"compilerOptions": {
		"target": "ES2021",
		"lib": [
			"ES2021",
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "./",
		"paths": {
			"@arkts/language-server": [
				"packages/language-server/src"
			],
		},
	},
}