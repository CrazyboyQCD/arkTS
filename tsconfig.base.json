{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo",
    "target": "ES2021",
    "lib": ["ES2021"],
    "baseUrl": "./",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "noEmit": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/ohos-typescript/**/*",
    "**/out/**/*",
    "**/node_modules/**/*",
    "**/dist/**/*",
    "**/*.d.ts",
    "**/packages/*/out/**/*"
  ]
}
