{
  "name": "@arkts/language-service",
  "version": "1.1.5",
  "description": "ArkTS Language Service.",
  "author": "Naily Zero <zero@naily.cc>",
  "license": "MIT",
  "homepage": "https://github.com/ohosvscode/arkTS/tree/next/packages/language-service",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohosvscode/arkTS",
    "directory": "packages/language-server"
  },
  "bugs": {
    "url": "https://github.com/ohosvscode/arkTS/issues",
    "email": "zero@naily.cc"
  },
  "keywords": [
    "language-server",
    "language-server-protocol",
    "harmonyos",
    "arkts",
    "ets"
  ],
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "import": "./out/index.mjs",
      "default": "./out/index.js"
    },
    "./permission": {
      "types": "./out/permission.d.ts",
      "import": "./out/permission.mjs",
      "default": "./out/permission.js"
    },
    "./dist/*": "./dist/*"
  },
  "main": "out/index.js",
  "files": [
    "bin",
    "out",
    "src"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown --tsconfig ./tsconfig.build.json",
    "prepublishOnly": "tsdown --tsconfig ./tsconfig.build.json",
    "release": "pnpm publish",
    "test": "node test-import.mjs && node test-require.cjs"
  },
  "dependencies": {
    "@arkts/project-detector": "catalog:prod",
    "@arkts/shared": "workspace:*",
    "@arkts/types": "workspace:*",
    "@types/vscode": "catalog:dev",
    "@volar/language-core": "catalog:prod",
    "@volar/language-server": "catalog:prod",
    "fast-glob": "catalog:dev",
    "image-type": "^6.0.0",
    "json5": "catalog:prod",
    "mitt": "catalog:prod",
    "ohos-typescript": "workspace:*",
    "ts-macro": "catalog:dev",
    "vscode-languageserver-textdocument": "catalog:prod",
    "vscode-languageserver-types": "catalog:prod",
    "vscode-uri": "catalog:prod"
  }
}
