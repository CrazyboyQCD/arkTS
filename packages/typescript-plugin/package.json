{
  "name": "@arkts/typescript-plugin",
  "version": "1.2.9",
  "private": true,
  "description": "ArkTS Typescript Plugin.",
  "author": "Naily Zero <zero@naily.cc>",
  "license": "MIT",
  "homepage": "https://github.com/Groupguanfang/arkTS/tree/main/packages/typescript-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/Groupguanfang/arkTS",
    "directory": "packages/typescript-plugin"
  },
  "bugs": {
    "url": "https://github.com/Groupguanfang/arkTS/issues",
    "email": "zero@naily.cc"
  },
  "keywords": [
    "typescript",
    "plugin",
    "arkts",
    "ets"
  ],
  "exports": {
    ".": {
      "types": {
        "import": "./out/index.d.mts",
        "require": "./out/index.d.ts",
        "default": "./out/index.d.ts"
      },
      "import": "./out/index.mjs",
      "require": "./out/index.js"
    },
    "./out/*": "./out/*"
  },
  "main": "./out/index.js",
  "module": "./out/index.mjs",
  "types": "./out/index.d.ts",
  "files": [
    "out"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown --tsconfig ./tsconfig.build.json",
    "prepublishOnly": "tsdown --tsconfig ./tsconfig.build.json",
    "release": "pnpm publish"
  },
  "devDependencies": {
    "@arkts/language-plugin": "workspace:*",
    "@volar/language-core": "catalog:prod",
    "@volar/language-server": "catalog:prod",
    "@volar/typescript": "catalog:prod",
    "ohos-typescript": "workspace:*",
    "volar-service-css": "catalog:prod",
    "volar-service-emmet": "catalog:prod",
    "volar-service-html": "catalog:prod",
    "volar-service-typescript": "catalog:prod",
    "vscode-html-languageservice": "catalog:prod",
    "vscode-uri": "catalog:prod"
  }
}
