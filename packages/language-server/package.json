{
  "name": "@arkts/language-server",
  "version": "1.2.4",
  "description": "ArkTS Language Server.",
  "author": "Naily Zero <zero@naily.cc>",
  "license": "MIT",
  "homepage": "https://github.com/ohosvscode/arkTS/tree/next/packages/language-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohosvscode/arkTS",
    "directory": "packages/language-server"
  },
  "bugs": {
    "url": "https://github.com/ohosvscode/arkTS/issues",
    "email": "zero@naily.cc"
  },
  "keywords": [
    "language-server",
    "language-server-protocol",
    "harmonyos",
    "arkts",
    "ets"
  ],
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "import": "./out/index.mjs",
      "default": "./out/index.cjs"
    },
    "./dist/*": "./dist/*"
  },
  "main": "out/index.cjs",
  "bin": {
    "ets-language-server": "./bin/ets-language-server.js"
  },
  "files": [
    "bin",
    "out"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown --tsconfig ./tsconfig.build.json",
    "prepublishOnly": "tsdown --tsconfig ./tsconfig.build.json",
    "release": "pnpm publish"
  },
  "dependencies": {
    "@arkts/language-service": "workspace:*",
    "@arkts/project-detector": "catalog:prod"
  },
  "devDependencies": {
    "@arkts/language-plugin": "workspace:*",
    "@arkts/shared": "workspace:*",
    "@types/vscode": "catalog:types",
    "@volar/language-core": "catalog:prod",
    "@volar/language-server": "catalog:prod",
    "@volar/typescript": "catalog:prod",
    "ohos-typescript": "workspace:*",
    "volar-service-css": "catalog:prod",
    "volar-service-emmet": "catalog:prod",
    "volar-service-html": "catalog:prod",
    "volar-service-typescript": "catalog:prod",
    "vscode-html-languageservice": "catalog:prod",
    "vscode-languageserver-protocol": "catalog:prod",
    "vscode-uri": "catalog:prod"
  }
}
