{
  "publisher": "NailyZero",
  "name": "vscode-naily-ets",
  "displayName": "Naily's ArkTS Support",
  "version": "1.2.6",
  "private": true,
  "description": "自用ArkTS扩展,支持代码跳转,欢迎PR! Naily's ArkTS Support.",
  "author": "Naily Zero <zero@naily.cc>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Groupguanfang/arkTS",
    "directory": "packages/vscode"
  },
  "bugs": {
    "url": "https://github.com/Groupguanfang/arkTS/issues",
    "email": "zero@naily.cc"
  },
  "keywords": [
    "ArkTS",
    "ets",
    "huawei"
  ],
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/client.cjs",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.22.0"
  },
  "galleryBanner": {
    "theme": "dark",
    "color": "#37337a"
  },
  "activationEvents": [],
  "contributes": {
    "viewsWelcome": [
      {
        "view": "explorer",
        "contents": "%viewWelcome.createProject%"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "module.json5",
        "url": "./schemas/module.schema.json"
      },
      {
        "fileMatch": "oh-package.json5",
        "url": "./schemas/oh-package.schema.json"
      },
      {
        "fileMatch": "build-profile.json5",
        "url": "./schemas/build-profile.schema.json"
      },
      {
        "fileMatch": "main_pages.json",
        "url": "./schemas/main_pages.schema.json"
      },
      {
        "fileMatch": [
          "**/resources/**/element/*.json"
        ],
        "url": "./schemas/element.schema.json"
      },
      {
        "fileMatch": "code-linter.json5",
        "url": "./schemas/code-linter.schema.json"
      },
      {
        "fileMatch": "hvigor-config.json5",
        "url": "./schemas/hvigor-config.schema.json"
      },
      {
        "fileMatch": "mock-config.json5",
        "url": "./schemas/mock-config.schema.json"
      },
      {
        "fileMatch": [
          "tsconfig.json",
          "tsconfig.*.json",
          "tsconfig-*.json",
          "jsconfig.json",
          "jsconfig.*.json",
          "jsconfig-*.json"
        ],
        "url": "./schemas/ets-tsconfig.schema.json"
      }
    ],
    "iconThemes": [
      {
        "id": "arkts-icons",
        "label": "ArkTS Icons",
        "path": "./icons/arkts-icon-theme.json"
      }
    ],
    "languages": [
      {
        "id": "ets",
        "extensions": [
          ".ets",
          ".d.ets"
        ],
        "aliases": [
          "ArkTS",
          "ets"
        ],
        "configuration": "./syntaxes/language-configuration.json",
        "bases": [
          "typescript"
        ]
      },
      {
        "id": "hml",
        "extensions": [
          ".hml"
        ],
        "aliases": [
          "hml"
        ],
        "configuration": "./syntaxes/hml-language-configuration.json",
        "bases": [
          "html"
        ]
      }
    ],
    "snippets": [
      {
        "language": "ets",
        "path": "./snippets/ets.code-snippets"
      }
    ],
    "grammars": [
      {
        "language": "ets",
        "scopeName": "source.ets",
        "path": "./syntaxes/ets.tmLanguage.json"
      },
      {
        "language": "hml",
        "scopeName": "source.hml",
        "path": "./syntaxes/hml.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "ets.restartServer",
        "title": "%command.restartServer%",
        "category": "ETS"
      },
      {
        "command": "ets.installSDK",
        "title": "%command.installSDK%",
        "category": "ETS"
      },
      {
        "command": "ets.createProject",
        "title": "%command.createProject%",
        "category": "ETS"
      }
    ],
    "configuration": {
      "title": "%extension.name%",
      "type": "object",
      "properties": {
        "ets.sdkPath": {
          "type": "string",
          "description": "%configuration.ets.sdkPath.description%",
          "default": ""
        },
        "ets.baseSdkPath": {
          "type": "string",
          "markdownDescription": "%configuration.ets.baseSdkPath.description%",
          "default": "${os.homedir}/OpenHarmony"
        },
        "ets.hmsPath": {
          "type": "string",
          "description": "%configuration.ets.hmsPath.description%",
          "default": ""
        },
        "ets.lspDebugMode": {
          "type": "boolean",
          "description": "%configuration.ets.lspDebugMode.description%",
          "default": false
        },
        "ets.hdcPath": {
          "type": "string",
          "description": "%configuration.ets.hdcPath.description%",
          "deprecationMessage": "Currently this setting is not used.",
          "default": ""
        },
        "ets.ignoreWorkspaceLocalPropertiesFile": {
          "type": "boolean",
          "markdownDescription": "%configuration.ets.ignoreWorkspaceLocalPropertiesFile.description%",
          "default": false
        },
        "ets.linterVersion": {
          "type": "string",
          "description": "The version of the ArkTS linter to use. Set to 'off' to disable the linter.",
          "enum": [
            "1.0",
            "1.1",
            "off"
          ],
          "default": "1.1"
        },
        "ets.resourceReferenceDiagnostic": {
          "type": "string",
          "description": "未匹配到的 $r() 资源引用的诊断级别",
          "enum": [
            "error",
            "warning",
            "none"
          ],
          "enumDescriptions": [
            "显示为错误",
            "显示为警告",
            "不显示任何诊断"
          ],
          "default": "error"
        },
        "ets.sdkList": {
          "type": "object",
          "description": "A list of installed OpenHarmony SDK paths. Keys should follow the pattern API[number] (e.g., API9, API10).",
          "default": {},
          "deprecationMessage": "Currently this setting is not used.",
          "properties": {
            "API10": {
              "type": "string",
              "description": "SDK path for API version 10"
            },
            "API11": {
              "type": "string",
              "description": "SDK path for API version 11"
            },
            "API12": {
              "type": "string",
              "description": "SDK path for API version 12"
            },
            "API13": {
              "type": "string",
              "description": "SDK path for API version 13"
            },
            "API14": {
              "type": "string",
              "description": "SDK path for API version 14"
            },
            "API15": {
              "type": "string",
              "description": "SDK path for API version 15"
            },
            "API18": {
              "type": "string",
              "description": "SDK path for API version 18"
            },
            "API20": {
              "type": "string",
              "description": "SDK path for API version 20"
            }
          },
          "additionalProperties": {
            "type": "string",
            "description": "SDK path for the corresponding API version"
          }
        }
      }
    },
    "typescriptServerPlugins": [
      {
        "name": "ets-typescript-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "walkthroughs": [
      {
        "id": "ArkTS-Walkthrough",
        "title": "%walkthroughs.ArkTS-Walkthrough.title%",
        "description": "%walkthroughs.ArkTS-Walkthrough.description%",
        "steps": [
          {
            "id": "ArkTS-Walkthrough-InstallSDK",
            "title": "%walkthroughs.ArkTS-Walkthrough.steps.installOpenHarmonySDK%",
            "description": "%walkthroughs.ArkTS-Walkthrough.steps.installOpenHarmonySDK.description%",
            "media": {
              "markdown": "%walkthroughs.ArkTS-Walkthrough.steps.installOpenHarmonySDK.media.markdown%"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "build": "tsdown",
    "watch": "cross-env NODE_ENV=development tsdown",
    "pack": "tsx scripts/pre-process.ts && pnpm run build && vsce package && tsx scripts/clean-process.ts",
    "release": "tsx scripts/pre-process.ts && pnpm run build && vsce publish && ovsx publish && tsx scripts/clean-process.ts",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "ovsx": "ovsx",
    "vsce": "vsce"
  },
  "dependencies": {
    "@napi-rs/wasm-runtime": "^1.0.7"
  },
  "devDependencies": {
    "@types/vscode": "^1.22.0"
  }
}
